        // Combinar datos hist√≥ricos con datos locales
        let attendanceData = JSON.parse(localStorage.getItem('churchAttendance')) || [];
        // Agregar datos hist√≥ricos solo si no existen ya
        historicalData.forEach(histItem => {
            const exists = attendanceData.some(item => 
                item.date === histItem.date && item.service === histItem.service
            );
            if (!exists) {
                attendanceData.push(histItem);
            }
        });

        // Ordenar por fecha
        attendanceData.sort((a, b) => new Date(a.date) - new Date(b.date));

        // Inicializar gr√°ficos
        let weeklyChart, monthlyChart, vehiclesChart, serviceDistributionChart, averageChart;

        function initCharts() {
            // Procesar datos para gr√°ficos
            const monthlyData = processMonthlyData();
            const weeklyData = processWeeklyData();
            const serviceData = processServiceData();
            const averageData = processAverageData();

            // Gr√°fico semanal
            const weeklyCtx = document.getElementById('weeklyChart').getContext('2d');
            weeklyChart = new Chart(weeklyCtx, {
                type: 'line',
                data: {
                    labels: weeklyData.labels,
                    datasets: [
                        {
                            label: '9:00 AM',
                            data: weeklyData.data9am,
                            borderColor: '#667eea',
                            backgroundColor: 'rgba(102, 126, 234, 0.1)',
                            tension: 0.4
                        },
                        {
                            label: '11:00 AM',
                            data: weeklyData.data11am,
                            borderColor: '#28a745',
                            backgroundColor: 'rgba(40, 167, 69, 0.1)',
                            tension: 0.4
                        },
                        {
                            label: '5:00 PM',
                            data: weeklyData.data5pm,
                            borderColor: '#ffc107',
                            backgroundColor: 'rgba(255, 193, 7, 0.1)',
                            tension: 0.4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Asistencia √öltimas 8 Semanas'
                        }
                    }
                }
            });

            // Gr√°fico mensual
            const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
            monthlyChart = new Chart(monthlyCtx, {
                type: 'bar',
                data: {
                    labels: monthlyData.labels,
                    datasets: [
                        {
                            label: 'Total Asistentes',
                            data: monthlyData.totals,
                            backgroundColor: 'rgba(102, 126, 234, 0.8)'
                        },
                        {
                            label: 'Promedio por Servicio',
                            data: monthlyData.averages,
                            backgroundColor: 'rgba(118, 75, 162, 0.8)'
