            });

            // Gr√°fico de veh√≠culos
            const vehiclesCtx = document.getElementById('vehiclesChart').getContext('2d');
            vehiclesChart = new Chart(vehiclesCtx, {
                type: 'line',
                data: {
                    labels: monthlyData.labels,
                    datasets: [
                        {
